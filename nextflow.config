// nextflow.config

// ----------------------------------------------------------------------------
// Global Process Defaults
// ----------------------------------------------------------------------------



// ----------------------------------------------------------------------------
// Parameters
// ----------------------------------------------------------------------------
params {
    // Control flow
    run_id          = null

    // Input
    sample_sheet    = 'sample_sheet.csv'
    data_dir        = 'data'
    maps_dir        = null

    // Output
    results_dir     = 'results'
}


// ----------------------------------------------------------------------------
// Docker Settings
// ----------------------------------------------------------------------------
docker {
    enabled = true
}

// ----------------------------------------------------------------------------
// Profiles
// ----------------------------------------------------------------------------
profiles {
    test {
        process {
            cpus    = 1
            memory  = '8 GB'
            time    = '10m'
        }
    }

    cluster {
        process {
            executor = 'slurm'
            cpus    = 8 
            memory  = '32 GB'
            time    = '12h'
        }
    }
}